@page
@model IndexModel
@{
    ViewData["Title"] = "Categories";
}
<partial name="_Notification"/>
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h3>List of All Category</h3>
            <hr/>
        </div>
        <div class="col-6">
            <a asp-page="Upsert" class="btn btn-primary"><i class="bi bi-plus-lg"></i>&nbsp;Create</a>
        </div>
    </div>
    <div class="row">
        <table class ="table table-hover table-bordered table-striped" style="width:50%">
            <thead>
                <tr>
                    <th class="bg-success text-white">Category Name</th>
                    <th class="bg-success text-white">Display Order</th>
                    <th class="bg-success text-white">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var Category in Model.categories)
                {
                    <tr>
                        <td>@Category.Name</td>
                        <td>@Category.DisplayOrder</td>
                        <td>
                            <a asp-page="Upsert" asp-route-id="@Category.Id" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i>
                            </a>
                            <a asp-page="Delete" asp-route-id="@Category.Id" class="btn btn-danger mx-2">
                                <i class="bi bi-trash"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>